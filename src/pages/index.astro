---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'NotBroke.US â€” Personal Finance Made Simple',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '/blog',
        icon: 'tabler:book',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero.png', alt: 'NotBroke.US Hero Image' }}
  >
    <Fragment slot="title">
      Your Path to <span class="text-accent dark:text-white highlight">Financial Freedom</span>
    </Fragment>

    <Fragment slot="subtitle">
      Simple, practical advice to help you make smarter financial decisions. No complicated jargon, just straightforward
      guidance for your money journey.
    </Fragment>
  </Hero>

  <!-- Features Widget -->
  <Features
    id="features"
    tagline="What We Offer"
    title="Why Choose NotBroke.US?"
    subtitle="We break down complex financial topics into easy-to-understand guides and practical advice."
    items={[
      {
        title: 'Simple Explanations',
        description: 'Complex financial concepts explained in plain English that anyone can understand.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Practical Advice',
        description: 'Real-world tips and strategies you can implement today to improve your finances.',
        icon: 'tabler:target',
      },
      {
        title: 'Latest Updates',
        description: 'Stay informed about the newest trends and changes in personal finance.',
        icon: 'tabler:refresh',
      },
    ]}
  />

  <!-- Latest Posts -->
  <BlogLatestPosts
    title="Latest Financial Tips"
    information="Discover our latest articles and guides to help you make better financial decisions."
  />

  <!-- Call to Action -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Start Learning',
        href: '/blog',
        icon: 'tabler:book',
      },
    ]}
  >
    <Fragment slot="title"> Ready to Take Control of Your Finances? </Fragment>

    <Fragment slot="subtitle"> Join our community and start your journey to financial freedom today. </Fragment>
  </CallToAction>
</Layout>
